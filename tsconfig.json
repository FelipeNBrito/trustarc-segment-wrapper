{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", 
    "moduleResolution": "node",
    "outDir": "./dist", // Output directory for emitted files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ], // Include all TypeScript files in src
  "exclude": [
    "node_modules"
  ] // Exclude node_modules
}